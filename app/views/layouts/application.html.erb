
<!DOCTYPE html>
<html>
  <head>
  <title>Wings Experience</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'styles' %>

  </head>

  <body>

  <div class="nav-bar">
  Wings Experience |
  <% if logged_in? %>
    <%= link_to 'account', user_path(current_user.id) %> |
    <%= link_to 'logout', sessions_path, method: :delete, data: { confirm: "Are you sure you want to logout?" } %><br>
  <% else %>
    <%= link_to 'signup', '/signup' %>
  <% end %>
  </div>
<% flash.each do |name, message| %>
  <%= message =%>
  <% end %>
  <div class="wing-image">
  <%=image_tag("https://image.shutterstock.com/image-photo/baked-chicken-wings-sesame-sauce-260nw-593995979.jpg", width: '800px') =%> 
  </div>
    <%= yield %>
  </body>
</html>
