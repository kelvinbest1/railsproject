
    <%= form_tag( "/sessions", {class: "login_form" } ) do %>
        <h2>Login</h2>

        <%= email_field_tag :email, nil, placeholder: 'email' %><br><br>
    
        <%= password_field_tag :password, nil, placeholder: 'password' %><br><br>

        <%= submit_tag "Login" %>
    <% end %>

    <div class="signup_account">
    <p>Don't have an account? <%= link_to "Sign up", "/signup" %> here!</p>
</div>

<div class="google_oauth2_sign_in">
<p><%= link_to "Log in with Google", "/auth/google_oauth2", method: :post %></p>
</div>